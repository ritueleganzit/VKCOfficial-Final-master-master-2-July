<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.CompletedPoFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            app:cardElevation="5dp"
            app:contentPadding="10dp"

            app:cardUseCompatPadding="true"
            android:layout_below="@+id/heading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEARCH"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabel"
                    android:textColorHint="@color/gray"
                    android:backgroundTint="@color/gray"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:backgroundTint="@color/gray"
                        android:inputType="date"

                        android:id="@+id/vendor_name_ed"
                        android:drawableRight="@drawable/ic_downarrow"

                        android:focusable="false"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"
                        android:hint="Vendor Name"

                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pw_input"
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabel"
                    android:textColorHint="@color/gray"
                    android:backgroundTint="@color/gray"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:backgroundTint="@color/gray"
                        android:inputType="date"
                        android:id="@+id/edenddate"
                        android:focusable="false"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"
                        android:hint="Date Range"

                        />

                </android.support.design.widget.TextInputLayout>

               <RadioGroup
                   android:id="@+id/rg"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <RadioButton
                       android:checked="true"
                       android:id="@+id/performance"
                       android:layout_width="wrap_content"
                       android:text="Performance Report"
                       android:textColor="@color/gray"
                       android:layout_height="wrap_content" />
                   <RadioButton
                       android:textColor="@color/gray"
                       android:id="@+id/utilization"
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:text="Utilization Report"
                       android:layout_height="wrap_content" />
               </RadioGroup>


                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabel"
                    android:visibility="gone"
                    android:id="@+id/txno_of_working_days"
                    android:textColorHint="@color/gray"
                    android:backgroundTint="@color/gray"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:backgroundTint="@color/gray"
                        android:inputType="number"
                        android:id="@+id/no_of_working_days"
                        android:singleLine="true"

                        android:imeOptions="actionNext"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"
                        android:hint="Enter no of working days"

                        />

                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/save"

                        android:layout_margin="5dp"
                        android:padding="8dp"
                        android:background="@drawable/btn_bg"
                        android:layout_gravity="center">


                        <TextView

                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_gravity="center"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="SEARCH"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>






        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rc_report"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <include layout="@layout/nodata"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>